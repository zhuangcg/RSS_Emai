# RSS source groups
RSS_GROUPS_FILE=rss_groups.json

# Per-group recipients (keep private; do not commit real addresses)
# You can point this to an external path, e.g. C:\Users\you\secrets\group_recipients.json
GROUP_RECIPIENTS_FILE=group_recipients.json

# Database
DATABASE_URL=sqlite:///data/rss.db

# SMTP settings
SMTP_HOST=smtp.example.com
SMTP_PORT=465
SMTP_USER=your_username
SMTP_PASS=your_app_password
SMTP_SENDER=sender@example.com

# Mail
MAIL_SUBJECT_PREFIX=[Papers]
BATCH_LIMIT=20

# Scheduler
ENABLE_SCHEDULE=false
SCHEDULE_TIME=08:30
SCHEDULE_TZ=Asia/Shanghai